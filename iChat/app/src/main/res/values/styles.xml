<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/img_app_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="small_text_style">
        <item name="android:textColor">@color/color_common_text</item>
        <item name="android:layout_marginTop">@dimen/activity_super_small_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_super_small_vertical_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="subscription_text_style">
        <item name="android:textColor">@color/color_subcription_text</item>
        <item name="android:layout_marginBottom">@dimen/activity_super_small_vertical_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="small_bold_text_style">
        <item name="android:textColor">@color/color_common_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="medium_text_style">
        <item name="android:textColor">@color/color_common_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="medium_bold_text_style">
        <item name="android:textColor">@color/color_common_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-semi-light</item>
    </style>

    <style name="larger_text_style">
        <item name="android:textColor">@color/color_common_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-semi-light</item>
    </style>

    <style name="small_error_text_style">
        <item name="android:textColor">@color/color_error_text</item>
        <item name="android:layout_marginTop">@dimen/activity_super_small_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_super_small_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_small_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_small_vertical_margin</item>
        <item name="android:background">@color/colorPrimaryBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="special_btn_style" parent="medium_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/corner_round</item>
        <item name="android:paddingBottom">@dimen/activity_small_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_small_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_larger_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_larger_horizontal_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
