<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/iv_profile_avatar"-->
            <!--android:layout_width="@dimen/profile_avatar_size"-->
            <!--android:layout_height="@dimen/profile_avatar_size"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:src="@drawable/img_default_avatar"-->
            <!--app:civ_border_width="2dp"-->
            <!--app:civ_border_color="#FF000000"/>-->

        <ImageView
            android:layout_width="@dimen/profile_avatar_size"
            android:layout_height="@dimen/profile_avatar_size"
            android:src="@drawable/img_default_avatar"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_medium_horizontal_margin"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstName LastName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Có 11 bạn chung"
            android:layout_marginBottom="@dimen/activity_small_vertical_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_medium_horizontal_margin"
            android:layout_marginRight="@dimen/activity_medium_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: Female"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: abc@outlook.com"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/activity_medium_vertical_margin"
            android:background="@drawable/corner_round"
            android:paddingBottom="@dimen/activity_small_vertical_margin"
            android:paddingTop="@dimen/activity_small_vertical_margin"
            android:paddingLeft="@dimen/activity_medium_horizontal_margin"
            android:paddingRight="@dimen/activity_medium_horizontal_margin"
            android:text="Follow"/>
    </LinearLayout>
</RelativeLayout>