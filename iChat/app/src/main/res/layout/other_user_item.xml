<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ln_other_user_item"
    android:layout_height="@dimen/other_user_item_height">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_user_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_other_user_avatar"
            android:layout_width="@dimen/user_friends_avatar_size"
            android:layout_height="@dimen/user_friends_avatar_size"
            android:src="@mipmap/ic_user_avatar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_medium_horizontal_margin"
            android:layout_marginRight="@dimen/activity_medium_horizontal_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_other_user_avatar"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_other_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other user"/>
            <TextView
                android:id="@+id/tv_other_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_other_user_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:id="@+id/btn_dismiss"
                android:layout_width="@dimen/other_user_btn_width"
                android:layout_height="@dimen/other_user_item_height"
                android:layout_alignParentRight="true"
                android:background="@color/dismiss_other_user"
                android:gravity="center">
                <ImageButton
                    android:layout_width="@dimen/setting_button_size"
                    android:layout_height="@dimen/setting_button_size"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:alpha="0.6"
                    android:src="@drawable/ic_dismiss"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_accept"
                android:layout_width="@dimen/other_user_btn_width"
                android:layout_height="@dimen/other_user_item_height"
                android:layout_toLeftOf="@id/btn_dismiss"
                android:gravity="center">
                <ImageButton
                    android:layout_width="@dimen/setting_button_size"
                    android:layout_height="@dimen/setting_button_size"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:alpha="0.6"
                    android:src="@drawable/ic_accept"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_add"
            android:layout_width="@dimen/other_user_btn_width"
            android:layout_height="@dimen/other_user_item_height"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:gravity="center">
            <ImageButton
                android:layout_width="@dimen/setting_button_size"
                android:layout_height="@dimen/setting_button_size"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:alpha="0.6"
                android:src="@drawable/ic_add"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>