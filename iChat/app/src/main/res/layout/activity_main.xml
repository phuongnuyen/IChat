<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_app_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#22FFFFFF">
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_bar_heigth"
            android:background="@drawable/searchview_background"
            android:layout_marginTop="@dimen/activity_larger_vertical_margin"
            android:layout_marginLeft="@dimen/activity_larger_horizontal_margin"
            android:layout_marginRight="@dimen/activity_larger_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_medium_vertical_margin"/>

        <fragment
            android:id="@+id/fr_main_bar"
            android:name="com.direct.ichat.Fagment.MainBarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_main_bar"
            android:layout_marginBottom="@dimen/activity_medium_vertical_margin"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gradient_line" />
    </LinearLayout>
</RelativeLayout>
