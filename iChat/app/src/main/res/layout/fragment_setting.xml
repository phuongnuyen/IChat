<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/activity_super_small_vertical_margin"
        android:paddingBottom="@dimen/activity_super_small_vertical_margin"
        android:layout_marginBottom="@dimen/activity_medium_vertical_margin"
        android:background="@color/colorPrimaryBackground">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_setting_user_avatar"
            android:layout_width="@dimen/user_friends_avatar_size"
            android:layout_height="@dimen/user_friends_avatar_size"
            android:src="@mipmap/ic_user_avatar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_medium_horizontal_margin"
            android:layout_marginRight="@dimen/activity_medium_horizontal_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_setting_user_avatar"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_setting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="firstname lastname"
                style="@style/medium_text_style"/>
            <TextView
                android:id="@+id/tv_setting_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subscription_text_style"
                android:text="username"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gradient_line"/>

    <TextView
        android:id="@+id/btn_setting_view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View profile"
        style="@style/small_text_style"
        android:textAlignment="textStart"
        android:background="@color/colorPrimaryBackground"
        android:layout_marginTop="@dimen/activity_medium_vertical_margin"
        android:paddingTop="@dimen/activity_medium_vertical_margin"
        android:paddingBottom="@dimen/activity_medium_vertical_margin"
        android:paddingLeft="@dimen/activity_larger_horizontal_margin"/>

    <TextView
        android:id="@+id/btn_setting_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change password"
        style="@style/small_text_style"
        android:textAlignment="textStart"
        android:background="@color/colorPrimaryBackground"
        android:layout_marginTop="1dp"
        android:paddingTop="@dimen/activity_medium_vertical_margin"
        android:paddingBottom="@dimen/activity_medium_vertical_margin"
        android:paddingLeft="@dimen/activity_larger_horizontal_margin"/>

    <TextView
        android:id="@+id/btn_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        style="@style/small_text_style"
        android:textAlignment="textStart"
        android:background="@color/red_alpha"
        android:layout_marginTop="1dp"
        android:paddingTop="@dimen/activity_medium_vertical_margin"
        android:paddingBottom="@dimen/activity_medium_vertical_margin"
        android:paddingLeft="@dimen/activity_larger_horizontal_margin"/>
</LinearLayout>